<div class="container">
	<div class="panel">
      <div class="panel-heading">
		<h3 class="panel-title"><%= @experience.topic %></h3>
		</div>
	<div class="panel-body">
	  <p><%= @experience.content %></p>
	</div>
	<div class="panel-footer">
		<p><small>Posted by:</small>
	  		<%= @experience.user.email %>
	 	</p>
	 </div>
	 
	<% if @experience.user == current_user %>
		<%= link_to 'Edit', edit_experience_path(@experience) %> 
	<% end %>

	<%= link_to 'Back', experiences_path %>

	 <hr size=2>

	<h3>Comments</h3>

	<%= form_for [@experience, Comment.new] do |f| %>
	<%= f.text_area :body, placeholder: "Add a comment" %><br/>
	<%= f.submit "Add Comment" %>
	<% end %>

	<ul>
 	 <%= render(partial: 'comments/comment', collection: @experience.comments) %>
	</ul>

</div>
