<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Experiences</h1>
   
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Topic</th>
        <th>Content</th>
        <th colspan="3"></th> 
      </tr>
    </thead>

    <tbody>
      <% @experiences.each do |experience| %>
        <tr>
          <td><%= experience.user.email %></td>
          <td><%= experience.topic %></td>
          <td><%= experience.content %></td>
          <td><%= link_to 'Show', experience %></td>
          <% if experience.user == current_user %>
            <td><%= link_to 'Edit', edit_experience_path(experience) %></td>
            <td><%= link_to 'Destroy', experience, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
      <% end %>
    </tbody>
  </table>

  <br>
  <% if user_signed_in? %>
    <%= link_to 'New Experience', new_experience_path %>
  <% end %>
</div>