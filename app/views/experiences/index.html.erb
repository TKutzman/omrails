<p id="notice"><%= notice %></p>


  <h1>Experiences</h1>

  <hr size=2>
   
  <% @experiences.each do |experience| %>
    <div class="panel">
      <div class="panel-heading">
      <h3 class="panel-title"><%= experience.topic %>, <small>     posted by <%= experience.user.email %></small></h3>
      </div>
      <div class="panel-body">
        <p><%= truncate(experience.content, :length =>50) %> ...</p>
      </div>
      <div class="panel-footer">
        <%= link_to 'Read more', experience, class: "btn btn-primary" %>  <% if experience.user == current_user %><%= link_to 'Edit', edit_experience_path(experience), class: "btn btn-primary" %><% end %>  <%= link_to 'Delete', experience, class: "btn btn-primary", method: :delete, data: {confirm: 'Are you sure?'}  %>
      </div>
      <hr size=2>
    </div>
  <% end %>
  


         