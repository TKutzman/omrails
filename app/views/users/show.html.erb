<p id="notice"><%= notice %></p>

	<div class="container">
	  	<div class="row">
		    <div class="col-md-4">
		    	<div class="card card-block">
		        <h4 class="card-title"><%= @user.username %></h4>
		        <% if current_user.following?(@user) %>
		        	<p class="card-text"><%= link_to "Unfollow", unfollow_user_path(@user.username), method: :delete %></p>
		        <% else %> 
		        	<p class="card-text"><%= link_to "Follow", follow_user_path(@user.username), method: :post %></p>
		        <% end %>
		    	</div>
		    </div>
		
	    <div class="container">
	    	<div class="col-md-8">
		        <ul class="list-group">
		          <% @experiences.each do |experience| %>
		            <%=link_to experience, class: "list-group-item list-group-item-action" do %>
		              <h5 class="list-group-item-heading"><%= experience.topic %>, <small>     posted by <%= experience.user.username %></small></h5>
		           
		              <p class="list-group-item-text"><%= truncate(experience.content, :length =>50) %> ...</p>
		            <% end %>
		         <% end %>
		        </ul>  
		    </div>
	    </div>
	  </div>
</div>
